extends layout
block content
  
    // Banner
    .banner
      .banner_background(style='background-image:url(images/banner_background.jpg)')
      .container.fill_height
        .row.fill_height
          .banner_product_image
            img(src='images/banner_product.png', alt='')
          .col-lg-5.offset-lg-4.fill_height
            .banner_content
              h1.banner_text new era of smartphones
              .banner_price
                span $530
                | $460
              .banner_product_name Apple Iphone 6s
              .button.banner_button
                a(href='#') Shop Now
    // HandPhone
    .viewed
      .container
        .row
          .col
            .viewed_title_container
              h3.viewed_title HandPhone
              .viewed_nav_container
                .viewed_nav.viewed_prev
                  i.fas.fa-chevron-left
                .viewed_nav.viewed_next
                  i.fas.fa-chevron-right
            .viewed_slider_container
              // Recently Viewed Slider
              .owl-carousel.owl-theme.viewed_slider
                // Recently Viewed Item
                .owl-item
                each showedhandphone in showhandphone
                  .viewed_item.discount.d-flex.flex-column.align-items-center.justify-content-center.text-center
                    .viewed_image
                      img.image(src='/#{showedhandphone.image1}', alt='')
                    .viewed_content.text-center
                      .viewed_price
                        | #{showedhandphone.hargabaru}
                        span #{showedhandphone.hargalama}
                      .viewed_name
                        a(href='/detailbarang') #{showedhandphone.merk}
                    ul.item_marks
                      li.item_mark.item_discount #{showedhandphone.stok}
                      //li.item_mark.item_new habis
                
    // Brands
    .brands
      .container
        .row
          .col
            .brands_slider_container
              // Brands Slider
              .owl-carousel.owl-theme.brands_slider
                .owl-item
                  .brands_item.d-flex.flex-column.justify-content-center
                    img(src='images/brands_1.jpg', alt='')
                .owl-item
                  .brands_item.d-flex.flex-column.justify-content-center
                    img(src='images/brands_2.jpg', alt='')
                .owl-item
                  .brands_item.d-flex.flex-column.justify-content-center
                    img(src='images/brands_3.jpg', alt='')
                .owl-item
                  .brands_item.d-flex.flex-column.justify-content-center
                    img(src='images/brands_4.jpg', alt='')
                .owl-item
                  .brands_item.d-flex.flex-column.justify-content-center
                    img(src='images/brands_5.jpg', alt='')
                .owl-item
                  .brands_item.d-flex.flex-column.justify-content-center
                    img(src='images/brands_6.jpg', alt='')
                .owl-item
                  .brands_item.d-flex.flex-column.justify-content-center
                    img(src='images/brands_7.jpg', alt='')
                .owl-item
                  .brands_item.d-flex.flex-column.justify-content-center
                    img(src='images/brands_8.jpg', alt='')
              // Brands Slider Navigation
              .brands_nav.brands_prev
                i.fas.fa-chevron-left
              .brands_nav.brands_next
                i.fas.fa-chevron-right